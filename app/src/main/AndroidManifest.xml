            android:label="Politics"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppInside" />
        <activity
            android:screenOrientation="portrait"
            android:name=".SportsActivity"
            android:label="Sports"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppInside" />
        <activity
            android:screenOrientation="portrait"
            android:name=".TravelActivity"
            android:label="Travel"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppInside" />

        <activity
            android:screenOrientation="portrait"
            android:name=".LifestyleActivity"
            android:label="Life Style"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppInside" />
        <activity
            android:screenOrientation="portrait"
            android:name=".MiscActivity"
            android:label="Miscellaneous"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppInside" />
        <activity
            android:screenOrientation="portrait"
            android:name=".PopActivity"
            android:label="Pop Culture"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppInside" />
    </application>

</manifest>